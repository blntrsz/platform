{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "STAGE",
    "CREATOR_PROJECT_NAME",
    "DESTROYER_PROJECT_NAME",
    "CDK_DEFAULT_ACCOUNT",
    "CDK_DEFAULT_REGION",
    "VITE_USERS_SITE",
    "VITE_ISSUES_SITE",
    "CLUSTER_NAME",
    "SECRET_ARN",
    "CLUSTER_ARN"
  ],
  "pipeline": {
    "build": {
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "test": {},
    "typecheck": {},
    "e2e:test": {},
    "run:migrate": {},
    "dev": {
      "cache": false,
      "persistent": false
    }
  }
}
